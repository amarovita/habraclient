<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <HorizontalScrollView android:id="@+id/scrollUserBar" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/layoutUserBar" android:gravity="center_horizontal|top" android:layout_gravity="fill_horizontal|center_horizontal">
            <TextView android:text="@string/captcha" android:layout_width="wrap_content" android:id="@+id/titleUserName" android:layout_marginLeft="5dip" android:gravity="center_vertical|center_horizontal" android:textSize="24px" android:maxWidth="100dip" android:layout_height="40dip" android:maxHeight="40dip" android:layout_marginRight="5dip" android:onClick="onClickUserName"/>
            <TextView android:text="@string/user_mark" android:textColor="#6C6" android:layout_width="wrap_content" android:id="@+id/titleKarma" android:textSize="20dip" android:layout_height="30dip" android:maxHeight="40dip" android:layout_marginRight="5dip"></TextView>
            <TextView android:text="@string/rating" android:textColor="#C6C" android:layout_width="wrap_content" android:textSize="20dip" android:layout_height="30dip" android:id="@+id/titleHabraForce"></TextView>
            <Button android:layout_width="wrap_content" android:text="@string/favorites" android:id="@+id/buttonFavorites" android:layout_marginLeft="5dip" android:layout_height="40dip" android:onClick="onClickFavorites"/>
            <Button android:layout_width="wrap_content" android:text="@string/private_mail" android:id="@+id/buttonPrivateMail" android:layout_height="40dip" android:onClick="onClickPM"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView android:layout_width="match_parent" android:id="@+id/scrollView1" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="match_parent" android:orientation="vertical">
            <WebView android:layout_width="match_parent" android:id="@+id/result" android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </ScrollView>
    <ProgressBar android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/procLoading"></ProgressBar>
    
</LinearLayout>
