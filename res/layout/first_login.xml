<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" android:isScrollContainer="true" android:scrollbars="vertical">
    <TextView android:layout_marginLeft="20dip" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginRight="20dip" android:gravity="center_horizontal" android:id="@+id/titleError" android:visibility="visible" android:text=""/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/user_name" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:id="@+id/textUserName" android:singleLine="true" android:autoText="false"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/password" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:password="true" android:id="@+id/textPassword" android:autoText="false" android:singleLine="true"/>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/layoutCaptcha" android:layout_height="wrap_content" android:orientation="vertical">
        <ImageView android:src="@drawable/habr_text" android:layout_height="75px" android:layout_width="166px" android:minHeight="75px" android:minWidth="166px" android:id="@+id/imageCaptcha" android:layout_gravity="center_horizontal" android:scaleType="fitXY"/>
        <EditText android:layout_width="match_parent" android:hint="@string/captcha" android:id="@+id/textCaptcha" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:layout_height="wrap_content" android:autoText="false" android:singleLine="true"/>
    </LinearLayout>
    <CheckBox android:layout_width="wrap_content" android:text="@string/save_password" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:checked="true" android:id="@+id/checkSavePassword"/>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:gravity="center_horizontal" android:baselineAligned="true">
        <Button android:layout_height="wrap_content" android:text="@string/login" android:minWidth="100dip" android:layout_width="wrap_content" android:id="@+id/buttonLogin" android:onClick="onClickLogin"/>
        <Button android:text="@string/skip" android:layout_height="wrap_content" android:minWidth="100dip" android:layout_width="wrap_content" android:id="@+id/buttonSkip" android:onClick="onClickSkip"/>
    </LinearLayout>
    
</LinearLayout>
